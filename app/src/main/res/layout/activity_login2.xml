<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="39dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/warning1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/notosansmed"
        android:gravity="top"
        android:text="로그인 정보가 올바르지 않습니다. 다시 시도해주세요."
        android:textColor="@color/appmain"
        android:textSize="16sp"
        android:visibility="invisible"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/esamanrumedium"
        android:text="학교 웹메일"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/lid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="16dp"
            android:hint="dajaedaneung@university.ac.kr"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/liddelete"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:scaleType="fitXY"
            android:src="@drawable/cilx"
            android:background="#00000000"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"/>
    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/esamanrumedium"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/lps"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="16dp"
            android:hint="8자 이상 입력하세요."
            android:textSize="16sp"
            android:inputType="textPassword"/>

        <ImageButton
            android:id="@+id/lpsdelete"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:scaleType="fitXY"
            android:src="@drawable/cilx"
            android:background="#00000000"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/lfindpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="비밀번호 찾기"
        android:textSize="14sp"/>

    <android.widget.Button
        android:id="@+id/lbtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:fontFamily="@font/notosansmed"
        android:backgroundTint="#CCCCCC"
        android:background="@drawable/edge"
        android:clickable="false"/>


</LinearLayout>