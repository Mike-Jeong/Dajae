<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back11"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="39dp"
                android:backgroundTint="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재능 구매/교환"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/notosansreg"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="90dp"/>


            <ImageView
                android:id="@+id/ssearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="99dp"
                android:backgroundTint="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/cilsearch" />


        </LinearLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Dajaedaneoung.AppBarOverlay">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.google.android.material.tabs.TabLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/t1"
                android:layout_width="95dp"
                android:layout_height="22dp"
                android:background="@drawable/edge"
                android:text="그림/만들기"
                android:drawableEnd="@drawable/more"
                android:paddingEnd="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/esamanrulight"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:textColor="@color/black"/>

            <android.widget.Button
                android:id="@+id/t2"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:background="@drawable/edge"
                android:text="위치"
                android:drawableEnd="@drawable/more"
                android:paddingEnd="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/esamanrulight"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/black"/>

            <android.widget.Button
                android:id="@+id/t3"
                android:layout_width="80dp"
                android:layout_height="22dp"
                android:background="@drawable/edge"
                android:text="수업형태"
                android:drawableEnd="@drawable/more"
                android:paddingEnd="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/esamanrulight"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/black"/>

        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        android:src="@drawable/floatingbutton"
        android:scaleType="fitXY"
        app:tint="@null"
        app:borderWidth="0dp"
        app:maxImageSize = "56dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>