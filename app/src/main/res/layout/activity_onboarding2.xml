<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/back3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="39dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/onboarding2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/esamanrumedium"
            android:text="비밀번호를 설정해주세요."
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/notosansmed"
            android:gravity="top"
            android:text="8자리 이상의 비밀번호로 설정해주세요."
            android:textColor="#7c7c7c"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ops"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginRight="16dp"
                    android:hint="8자 이상 입력하세요."
                    android:textSize="16sp"/>

                <ImageButton
                    android:id="@+id/o2delete"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cilx"
                    android:background="#00000000"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="29dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/pwarning"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/notosansmed"
            android:gravity="top"
            android:text="8자리 이상 입력해주세요"
            android:textColor="@color/appmain"
            android:textSize="10sp"
            android:visibility="invisible"/>

        <android.widget.Button
            android:id="@+id/o2next"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="300dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/notosansmed"
            android:backgroundTint="#CCCCCC"
            android:background="@drawable/edge"
            android:clickable="false"/>


    </LinearLayout>


