<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/back4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="39dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/onboarding3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/esamanrumedium"
            android:text="어떤 재능을"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/esamanrumedium"
            android:text="배우고 싶은신가요?"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/notosansmed"
            android:gravity="top"
            android:text="선택한 재능은 추천 재능으로 이어져요."
            android:textColor="#7c7c7c"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/notosansmed"
            android:gravity="top"
            android:text="핫한 재능"
            android:textColor="#7c7c7c"
            android:textSize="16sp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/o3t1"
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:background="@drawable/edge2"
                    android:text="대학 생활"
                    android:textSize="12sp"
                    android:fontFamily="@font/esamanrulight"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <android.widget.Button
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:background="@drawable/edge2"
                    android:text="전공 지식"
                    android:textSize="12sp"
                    android:fontFamily="@font/esamanrulight"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <android.widget.Button
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:background="@drawable/edge2"
                    android:text="운동"
                    android:textSize="12sp"
                    android:fontFamily="@font/esamanrulight"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <android.widget.Button
                    android:layout_width="80dp"
                    android:layout_height="22dp"
                    android:background="@drawable/edge2"
                    android:text="그림/만들기"
                    android:textSize="12sp"
                    android:fontFamily="@font/esamanrulight"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

                <android.widget.Button
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:background="@drawable/edge2"
                    android:text="음악"
                    android:textSize="12sp"
                    android:fontFamily="@font/esamanrulight"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <android.widget.Button
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:background="@drawable/edge2"
                    android:text="사진"
                    android:textSize="12sp"
                    android:fontFamily="@font/esamanrulight"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <android.widget.Button
                    android:id="@+id/o3t2"
                    android:layout_width="80dp"
                    android:layout_height="22dp"
                    android:background="@drawable/edge2"
                    android:text="프로그램 툴"
                    android:textSize="12sp"
                    android:fontFamily="@font/esamanrulight"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <android.widget.Button
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:background="@drawable/edge2"
                    android:text="베이킹"
                    android:textSize="12sp"
                    android:fontFamily="@font/esamanrulight"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

                <android.widget.Button
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:background="@drawable/edge2"
                    android:text="외국어"
                    android:textSize="12sp"
                    android:fontFamily="@font/esamanrulight"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <android.widget.Button
                    android:id="@+id/o3t3"
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:background="@drawable/edge2"
                    android:text="게임"
                    android:textSize="12sp"
                    android:fontFamily="@font/esamanrulight"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"/>

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/o3next"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="185dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/notosansmed"
            android:backgroundTint="#CCCCCC"
            android:background="@drawable/edge"
            android:clickable="false"/>


    </LinearLayout>


