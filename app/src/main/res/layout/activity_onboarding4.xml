<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/back5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="39dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/onboarding4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/esamanrumedium"
            android:text="사용할 닉네임을 입력해주세요."
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/notosansmed"
            android:gravity="top"
            android:text="닉네임은 언제든 수정이 가능해요!"
            android:textColor="#7c7c7c"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/o2ps"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginRight="16dp"
                    android:hint="마포구갓생러"
                    android:textSize="16sp"/>

                <ImageButton
                    android:id="@+id/o5delete"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cilx"
                    android:background="#00000000"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="120dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="visible"/>

                <android.widget.Button
                    android:id="@+id/o5check"
                    android:layout_width="76dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="3dp"
                    android:layout_gravity="bottom|end"
                    android:text="중복 확인"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/notosansmed"
                    android:backgroundTint="#CCCCCC"
                    android:background="@drawable/edge"
                    android:gravity="center_horizontal"
                    android:clickable="false"/>

        </FrameLayout>

        <TextView
            android:id="@+id/nwarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="16dp"
            android:text="사용중인 닉네임이에요. 다른 닉네임을 입력해주세요."
            android:textSize="12sp"
            android:textColor="@color/appmain"
            android:visibility="invisible"/>


        <android.widget.Button
            android:id="@+id/o5done"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="bottom"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/notosansmed"
            android:backgroundTint="#CCCCCC"
            android:background="@drawable/edge"
            android:clickable="false"/>


    </LinearLayout>


